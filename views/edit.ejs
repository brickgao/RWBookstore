<%- include header %>

    <div class="container">
      <form class="form-horizontal" method="post">
        <legend>增加书籍</legend>
        <div class="form-group">
          <label for="bookname" class="col-sm-2 control-label">图书名称</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" style="width: 50%;" id="bookname" name="bookname" value=<%= row.bookname %> disabled>
          </div>
        </div>
        <div class="form-group">
          <label for="price" class="col-sm-2 control-label">图书价格</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" style="width: 50%;" id="price" name="price" value=<%= row.price %>>
          </div>
        </div>
        <div class="form-group">
          <label for="bookinfo" class="col-sm-2 control-label">图书简介</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" style="width: 50%;" id="bookinfo" name="bookinfo" value=<%= row.bookinfo %>>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">更新</button>
          </div>
        </div>
      </form>
    </div>

<%- include footer %>

