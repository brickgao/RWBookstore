<%- include header %>

    <div class="container">
      <p>
          <a class="btn btn-lg btn-primary" href="/manage/add" role="button">增加书籍</a>
      </p>
      <hr>
      <table class="table">
        <thead>
          <tr>
            <th>#</th>
            <th>图书名称</th>
            <th>图书价格</th>
            <th>详情</th>
          </tr>
          <% for(var i = 0; i< row.length; ++ i) { %>
          <tr>
            <% tmp = "/manage/" + i.toString() %>
            <td><%= i %></td>
            <td><%= row[i].bookname %></td>
            <td><%= row[i].price %></td>
            <td><a href=<%= tmp %>>详情</a></td>
          </tr>
          <% } %>
        </thead>
      </table>
    </div>

<%- include footer %>



